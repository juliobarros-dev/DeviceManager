    </ItemGroup>

    <ItemGroup>
        <Content Include="..\DeviceManager.Infrastructure.Database\appsettings.database.json">
            <Link>appsettings.database.json</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>
    
</Project>
